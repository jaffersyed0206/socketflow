{
  "compilerOptions": {
    // Build outputs
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Module/Resolution (bundler-style = no .js extension in TS imports)
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],

    // Type-checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    // DX
    "moduleDetection": "force",

    // IMPORTANT: don't leak Node-only types to browser consumers
    // If you need Node types for tests/build scripts, use a separate tsconfig (see note below)
    // "types": ["node"]  // <-- leave OFF here
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
